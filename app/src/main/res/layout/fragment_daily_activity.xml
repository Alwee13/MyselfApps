<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_purple"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daily Activities"
            android:textColor="@color/text_white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.02" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="My daily routine activities"
            android:textColor="@color/secondary_dark"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Daily Activities RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDailyActivities"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_daily_activity" />

    <!-- Friend List Button -->
    <Button
        android:id="@+id/btnFriendList"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="16dp"
        android:text="View Friend List"
        android:textColor="@color/text_white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@color/secondary_dark"
        app:cornerRadius="12dp" />

</LinearLayout> 