<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/dark_purple"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/surface_dark"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interest &amp; Hobbies"
            android:textColor="@color/secondary_dark"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:letterSpacing="0.02" />

        <!-- Hobby Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Hobby:"
                android:textColor="@color/secondary_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/hobbyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Gaming, Music"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Makes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Makes:"
                android:textColor="@color/secondary_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/makesText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sports, Ai"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Mikes Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Mikes:"
                android:textColor="@color/secondary_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/mikesText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Coffee, Crowd, sweet foods"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Cita-cita Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Goals:"
                android:textColor="@color/secondary_dark"
                android:textSize="17sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01" />

            <TextView
                android:id="@+id/citaCitaText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Become a Ai Engineer"
                android:textColor="@color/text_white"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView> 